<script type="text/javascript">
		var str=document.getElementById('demo').textContent;
		var s=str.split(" ");
        
		var count=0,co=0;
		for(i=0;i<s.length;i++){
			count=0;	
			for(j=0;j<s.length;j++){
				if(s[i]==s[j]){
					count++;
			  }
			} 
		if(s[i].length>3){
			document.write(s[i]+" ");
			if(co<=count){
				co=count;

			  	val=s[i];
			}
		}
		}
		document.write("<br><br><b >"+val+"</b>"+"        "+co+" times <br>");
		window.alert(val +" is "+co+" times");
		//document.getElementById('demo').style.textAlign="center";
	</script>

